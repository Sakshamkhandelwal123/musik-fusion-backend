{
  "name": "musik-fusion-backend",
  "version": "1.0.0",
  "description": "Music Webapp",
  "author": "Saksham Khandelwal",
  "license": "ISC",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "npm run init:db && nest start",
    "start:development": "set NODE_ENV=development&&nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:production": "npm run init:db && node dist/src/main",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.7"
  },
  "engines": {
    "node": "18.16.1"
  }
}
